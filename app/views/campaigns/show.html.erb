<p style="color: green"><%= notice %></p>

<%= render @campaign %>

<%= render 'index_donations', donations: @campaign.donations %>

<div>
  <%= link_to "Donasi Sekarang", contribute_campaign_path(@campaign), class: "btn btn-primary btn-lg px-4 gap-3" %>
  <%= link_to "Back to campaigns", campaigns_path, class: "btn btn-primary btn-lg px-4 gap-3" %>
  <% if current_user && current_user.admin? %>
    <%= link_to "Edit", edit_campaign_path(@campaign), class: "btn btn-info btn-lg px-4 gap-3"  %>
  <%= button_to "Destroy", @campaign, method: :delete, class: "btn btn-danger btn-lg px-4 gap-3"  %>
  <% end %>
</div>