<div class="col" id="<%= dom_id campaign %>">
  <div class="card shadow-sm">
    <img src="<%= campaign.picture %>" class="card-img-top" alt="<%= campaign.title %>">
    <div class="card-body">
      <p class="card-text"><%= campaign.title %></p>
      <p class="card-text">Total: <%= campaign.total %></p>
      <p class="card-text">Target: <%= campaign.target %></p>
      <p class="card-text">Ditutup: <%= campaign.close_at %></p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to campaign_path(campaign) do %>
            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <% end %>
          <% if current_user && current_user.admin? %>
            <%= link_to edit_campaign_path(campaign) do %>
              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
            <% end %>
          <% end %>
        </div>
        <small class="text-body-secondary">9 mins</small>
      </div>
    </div>
  </div>
</div>